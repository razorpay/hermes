{{page-title "Projects"}}
<Header />

<section class="x-container">
  <div class="flex items-center space-x-2 mb-8">
      <FlightIcon @name="git-branch" @size="24" />
      <h2
        class="hds-typography-display-300 hds-font-weight-semibold hds-foreground-strong"
      >{{this.model.businessUnitId}} / {{this.model.teamId}} / Projects</h2>
    </div>
  <div class="wrapper">
    <div class="folder-list">
      {{#each-in this.model.projects as |projKey projValue|}}
          <LinkTo
            @route="authenticated.project"
            @models={{array this.model.businessUnitId this.model.teamId projKey}}
            class="flex flex-col items-start space-y-2 p-4 -m-4 rounded-md hover:bg-color-palette-neutral-50 active:bg-color-palette-neutral-100 overflow-hidden"
          >
            <div class="centered-container">
              <div class="space-y-2">
                <Hds::IconTile @icon="folder" @color="vault" />
              </div>

              <div class="flex flex-col items-start space-y-1">
                <p>
                  {{projKey}}
                </p>
              </div>
            </div>
          </LinkTo>
      {{/each-in}}
    </div>
  </div>
</section>

{{outlet}}