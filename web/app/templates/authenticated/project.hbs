{{page-title "Files"}}
<Header />
<section class="x-container">
  {{#if this.model.files}}
    <div
      class="flex flex-col w-full py-10 border-0 border-b hds-border-primary"
    >
     {{#each this.model.files as |doc index|}}
      <li>
      <LinkTo 
      @route="authenticated.document"  
      @model="{{doc.objectID}}"
      @query={{hash draft=@isDraft}}
      class="flex space-x-4 items-start"
      >
        {{doc.title}}
      </LinkTo>
    </li>
    {{/each}}
    </div>
  {{else}}
  <p>No Files Found</p>
{{/if}}
</section>

{{outlet}}