<FlightIcon
  data-test-x-dropdown-list-checkable-item-check
  data-test-is-checked={{@selected}}
  @name="check"
  class="check {{if @selected 'visible' 'invisible'}}"
/>
<div class="x-dropdown-list-item-value">
  {{@value}}
</div>
{{#if @count}}
  <Hds::BadgeCount
    data-test-x-dropdown-list-checkable-item-count
    @text="{{@count}}"
    @size={{this.HdsBadgeCountSize.Small}}
    class="x-dropdown-list-item-count"
  />
{{/if}}
